<h1>Listing theses</h1>

<table>
  <thead>
    <tr>
      <th>Call number</th>
      <th>Course</th>
      <th>Year</th>
      <th>Last name</th>
      <th>Given name</th>
      <th>Pages</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @theses.each do |thesis| %>
      <tr>
        <td><%= thesis.call_number %></td>
        <td><%= thesis.course %></td>
        <td><%= thesis.year %></td>
        <td><%= thesis.last_name %></td>
        <td><%= thesis.given_name %></td>
        <td><%= thesis.pages %></td>
        <td><%= link_to 'Show', thesis %></td>
        <td><%= link_to 'Edit', edit_thesis_path(thesis) %></td>
        <td><%= link_to 'Destroy', thesis, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Thesis', new_thesis_path %>
